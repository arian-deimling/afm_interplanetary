<!DOCTYPE html>
<html>
<head>
  <%- include('./partials/_head_meta'); %>
  <script type=module src=/scripts/viewreservation.js></script>
  <style>
    table,
    td,
    tr,
    th {
      border: 1px solid lightgray;
      border-collapse: collapse;
    }
  </style>
</head>
<body>
  <!-- page layout divs -->
  <div id=main class=flex-rows>
    <div id=main-column class=flex-cols>

      <!-- nav bar and website title -->
      <%- include('./partials/_nav'); %>
      <%- include('./partials/_header'); %>

      <!-- layout div -->
      <div id=form-div class='flex-rows center'>
        <form class=flex-cols action=/ method=post>

          <!-- header -->
          <h2 class=no-margin-top>Existing Reservations</h2>

          <!-- table to display existing reservations -->
          <table id=reservation_display hidden>
            <thead>
              <tr>
                <th><br>Trip Date</th>
                <th>Number of Passengers<hr>Seats</th>
                <th><br>Created</th>
                <th><br>Updated</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>

          <!-- message to display if no reservations exist for the user  -->
          <div hidden id=no_reservation class=black-text>
            No reservations currently exist.
            <a href=/reservation>Create one?</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
